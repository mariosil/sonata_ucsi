<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Model</th>
      <th>Year</th>
      <th>Is_new</th>
      <th>Price</th>
      <th>Dealershipr</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.company %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.is_new %></td>
        <td><%= number_to_currency car.price %></td>
        <td><%= link_to car.dealership.name, dealership_path(car.dealership) %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

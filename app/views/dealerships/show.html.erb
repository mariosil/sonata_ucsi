<h2>Dealership: <%= @dealership.name %></h2>
<small><%= @dealership.cars.size %>  cars</small>
<% if current_user&.is_admin? %>
  <%= link_to 'Edit', edit_dealership_path(@dealership) %>
<% end %>
<div id="content">
  <p><%= link_to 'New Car', new_car_path %> | <%= link_to 'Back', dealerships_path %></p>

  <table>
    <thead>
      <tr>
        <th>Company</th>
        <th>Model</th>
        <th>Year</th>
        <th>Is_new</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @dealership.cars.each do |car| %>
        <tr>
          <td><%= car.company %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= car.is_new %></td>
          <td><%= number_to_currency car.price %></td>
          <td><%= link_to 'Show', car %></td>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <p><%= link_to 'New Car', new_car_path %> | <%= link_to 'Back', dealerships_path %></p>
</div>
